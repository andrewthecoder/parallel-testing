{% extends "OryzoneBoilerplateBundle::html5.html.twig" %}

{% block head_title %}Parallel Technology Comparison{% endblock %}

{% block body_container_header %}
	<style type='text/css'>
		html, body, #container {
			width: 100%;
			margin: 0;
			padding: 0;
			position: relative;
		}
		#container > div {
		}
	</style>
    <h1>Parallel Technology Comparison</h1>
{% endblock %}

{% block body_container_main %}
    <h3>Comparison of Sequential Algorithms and Parallel Programming APIs</h3>

    {% for currentChart in allChartsToDisplay %}
        
        <div id="chart_{{ currentChart.type }}_{{ currentChart.numberOfCores }}" style="position: relative; height: 800px; min-width: 400px; margin: 0 auto"></div>
    
    {% endfor %}
    
{% endblock %}

{% block body_container_footer %}
{% endblock %}

{% block body_js %}
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

	<script src="{{ asset('bundles/obhighcharts/js/highcharts/highcharts.js') }}"></script>
	<script src="{{ asset('bundles/obhighcharts/js/highcharts/modules/exporting.js') }}"></script>
	<script type="text/javascript">
        $(function(){
            {% for currentChart in allChartsToDisplay %}
            
                {% set variableName = 'chart_' ~ currentChart.type ~ '_' ~ currentChart.numberOfCores %}
                {{ chart(currentChart, false, variableName) }}
            
            {% endfor %}
        });
	</script>
{% endblock %}